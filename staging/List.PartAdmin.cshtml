@inherits Custom.Hybrid.RazorTyped
@using ToSic.Razor.Blade

@* TODO @2dg - use appcode and App.Resources, not AllResources *@

@if (MyUser.IsContentAdmin) 
{
  <div class="alert alert-info d-flex align-items-center">
    <strong>@AllResources.String("Admin") </strong>
    <button type="button" class="btn btn-secondary ml-2 ms-2" onclick="$2sxc.cms.run(this, 'contentitems', { contentType: 'Event' })">@AllResources.String("BtnEvents")</button>
    <button type="button" class="btn btn-secondary ml-2 ms-2" onclick="$2sxc.cms.run(this, 'contentitems', { contentType: 'Registrations' })">@AllResources.String("BtnRegistrations")</button>
    <button type="button" class="btn btn-primary ml-2 ms-2" onclick="$2sxc.cms.run(this, 'new', { contentType: 'Event', entityId: 0 })">@AllResources.String("BtnNewEvent")</button>
  </div>
}