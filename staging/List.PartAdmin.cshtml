@inherits AppCode.Razor.AppRazor
@using ToSic.Razor.Blade

@if (MyUser.IsContentAdmin) 
{
  <div class="alert alert-info d-flex align-items-center">
    <strong>@App.Resources.AdminTitle</strong>
    <button type="button" class="btn btn-secondary ml-2 ms-2" onclick="$2sxc.cms.run(this, 'contentitems', { contentType: 'Event' })">@App.Resources.AdminBtnEvents</button>
    <button type="button" class="btn btn-secondary ml-2 ms-2" onclick="$2sxc.cms.run(this, 'contentitems', { contentType: 'Registrations' })">@App.Resources.AdminBtnRegistrations</button>
    <button type="button" class="btn btn-primary ml-2 ms-2" onclick="$2sxc.cms.run(this, 'new', { contentType: 'Event', entityId: 0 })">@App.Resources.AdminBtnNewEvent</button>
  </div>
}