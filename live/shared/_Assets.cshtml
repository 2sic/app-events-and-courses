@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade
@using ToSic.Sxc.Services
@{
  // 1. Get Services for Css and Page
  var pageCss = GetService<Connect.Koi.ICss>();         // Service to get CSS information about the current Theme
  var pageSvc = GetService<IPageService>();  // Service to set titles etc. on the page

  // 2. Include Bootstrap4 if the framework isn't known
  if (pageCss.IsUnknown) {
    pageSvc.Activate("Bootstrap4");
  }

  pageSvc.Activate("turnOn"); // see https://r.2sxc.org/turnon

  var domAttribute = "events-" + CmsContext.Module.Id;

  var Edition = CmsContext.View.Edition;
}

@Edit.Enable(js: true)
<turnOn turn-on='{"run": "window.appEvents6.init()", "data": { "domAttribute": "@domAttribute" }}'></turnOn>
<link rel="stylesheet" href="@App.Path/@Edition/dist/styles.min.css" @pageSvc.AssetAttributes()>
<script src="@App.Path/@Edition/dist/scripts.min.js" @pageSvc.AssetAttributes()></script>
